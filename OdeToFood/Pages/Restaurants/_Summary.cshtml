@using OdeToFood.Core
@model Restaurant

<div class="card" style="margin: 10px 0px;">
    <h5 class="card-header">@Model.Name</h5>
    <div class="card-body">
        <span class="card-text">Location: @Model.Location</span>
        <span class="card-text">Cuisine: @Model.Cuisine</span>

        <a class="btn btn-primary"
           asp-page="./Detail"
           asp-route-restaurantId="@Model.Id">
            <i class="fas fa-search-plus"></i>
        </a>
        <a class="btn btn-primary"
           asp-page="./Edit"
           asp-route-restaurantId="@Model.Id">
            <i class="fas fa-edit"></i>
        </a>
        <a class="btn btn-primary"
           asp-page="./Delete"
           asp-route-restaurantId="@Model.Id">
            <i class="fas fa-trash"></i>
        </a>
    </div>
</div>
